// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch",
            "isBackground": true,
            "type": "shell",
            "command": "npm run watch",
            "problemMatcher": [{
                "base": "$tsc-watch",
                "applyTo": "openDocuments",
                "background": {
                    "beginsPattern": {
                        "regexp": "Projects in this build"
                    },
                    "endsPattern": {
                        "regexp": "Build completed"
                    }
                }
            }],
            "presentation": {
                "reveal": "always",
            },
            "group": "build"
        }
    ]
}
