{
    "devDependencies": {
        "@types/glob": "^5.0.35",
        "@types/jest": "^23.3.2",
        "@types/node": "^10.9.4",
        "jest": "^23.5.0",
        "lerna": "^3.3.0",
        "prettier": "^1.14.2",
        "rimraf": "^2.6.2",
        "ts-jest": "^23.1.4",
        "tslint": "^5.11.0",
        "tslint-microsoft-contrib": "^5.2.1",
        "typescript": "^3.0.3"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "printWidth": 120
    },
    "scripts": {
        "postinstall": "lerna bootstrap",
        "lint": "tslint -t stylish --project packages/tsconfig.settings.json",
        "clean": "rimraf packages/*/lib",
        "build": "npm run clean && tsc -b --verbose packages/tsconfig.build.json && echo 'Build completed'",
        "watch": "npm run build && tsc -b --verbose --watch packages/tsconfig.build.json",
        "test": "jest --projects packages/papyrus-lang packages/papyrus-lang-lsp-server"
    },
    "name": "papyrus-lang"
}
