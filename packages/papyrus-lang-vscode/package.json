{
    "name": "papyrus-lang-vscode",
    "displayName": "Papyrus",
    "description": "Advanced language support for Fallout 4 Papyrus scripting language.",
    "version": "0.1.0",
    "publisher": "joelday",
    "engines": {
        "vscode": "^1.26.0"
    },
    "private": true,
    "preview": true,
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:papyrus",
        "onLanguage:papyrus-project"
    ],
    "main": "./lib/extension",
    "repository": {
        "type": "git",
        "url": "https://github.com/joelday/papyrus-lang.git"
    },
    "contributes": {
        "languages": [
            {
                "aliases": [
                    "Papyrus"
                ],
                "id": "papyrus",
                "extensions": [
                    ".psc"
                ],
                "configuration": "./syntaxes/papyrus/papyrus-language-configuration.json"
            },
            {
                "aliases": [
                    "Papyrus Project"
                ],
                "id": "papyrus-project",
                "extensions": [
                    ".ppj"
                ],
                "configuration": "./syntaxes/papyrus-project/papyrus-project-language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "papyrus",
                "scopeName": "source.papyrus",
                "path": "./syntaxes/papyrus/papyrus.json"
            },
            {
                "language": "papyrus-project",
                "scopeName": "text.xml.papyrus-project",
                "path": "./syntaxes/papyrus-project/papyrus-project.json"
            }
        ],
        "snippets": [
            {
                "language": "papyrus",
                "path": "./snippets/papyrus/papyrus-classes.json"
            },
            {
                "language": "papyrus",
                "path": "./snippets/papyrus/papyrus-comments.json"
            },
            {
                "language": "papyrus",
                "path": "./snippets/papyrus/papyrus-statements.json"
            },
            {
                "language": "papyrus-project",
                "path": "./snippets/papyrus-project/papyrus-project.json"
            }
        ]
    },
    "scripts": {
        "vscode:install": "node ./node_modules/vscode/bin/install",
        "postinstall": "lerna run vscode:install --scope papyrus-lang-vscode"
    },
    "dependencies": {
        "chokidar": "^2.0.4",
        "papyrus-lang": "^0.1.0",
        "papyrus-lang-lsp-server": "^0.1.0",
        "vscode-languageclient": "^5.0.1"
    },
    "devDependencies": {
        "@types/chokidar": "^1.7.5",
        "@types/glob": "^5.0.35",
        "@types/mocha": "^5.2.5",
        "@types/node": "^10.7.1",
        "rimraf": "^2.6.2",
        "typescript": "^3.0.1",
        "vscode": "^1.1.21"
    }
}
